from flask import Flask, render_template, request
from flask_migrate import Migrate
from flask_sqlalchemy import SQLAlchemy


app = Flask('Steps')
app.config['SQLALCHEMY_DATABASE_URI'] = 'sqlite:///steps.db'
db = SQLAlchemy(app)
migrate = Migrate(app, db)

class Steps(db.Model):
    id = db.Column(db.Integer, primary_key=True)
    steps = db.Column(db.Integer)
    date = db.Column(db.Integer)
    in_stock = db.Column(db.Boolean, default=True)


    def __repr__(self):
        return f'Steps{self.id}. {self.stepy} - {self.dat}.'


@app.route('/')
def main():
    stepss = Steps.query.all()
    return render_template('index.html', stepsss_list=stepss)


@app.route('/in_stock/<steps_id>', methods=['PATCH'])
def modify_steps(steps_id):
    stepss = Steps.query.get(steps_id)
    stepss.in_stock = request.json['in_stock']
    db.session.commit()

@app.route('/add', methods=['POST'])
def add_steps():
    data = request.json
    stepss = Steps(**data)
    db.session.add(stepss)
    db.session.commit()



if __name__ == '__main__':
    with app.app_context():
        db.create_all()
    app.run(debug=True)
